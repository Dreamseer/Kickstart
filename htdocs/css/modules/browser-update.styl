// @section browser-update
.browser-update {
	font: bold .75em/2 text-copy;
	text-align: center;
	color: darken(color-text, 100%);
	background: darken(color-background, 25%);

	a {

		&:link ,
		&:visited ,
		&:hover ,
		&:focus ,
		&:active {
			color: darken(color-text, 100%);
			background: transparent;
		}

		&:link ,
		&:visited {
			text-decoration: underline;
		}

		&:hover ,
		&:focus ,
		&:active {
			text-decoration: none;
		}

	}

}
