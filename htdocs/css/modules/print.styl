@media print {

	// @section page-layout
	@page {
		size: A4 landscape;
		margin: 2cm;
		orphans: 4;
		widows: 2;

		@bottom-center {
			content: counter(page);
		}

		:left {
			margin-left: 3cm;
		}

		:right {
			margin-right: 3cm;
		}

	}

	html ,
	body {
		width: 100%;
		max-width: none;
		margin: 0;
		padding: 0;
		color: #000;
		background: #fff;
	}

	// @section page-breaks
	h1 ,
	h2 ,
	h3 ,
	h4 ,
	h5 ,
	h6 ,
	table tr {
		page-break-inside: avoid;
	}

	// @section images
	img {
		max-width: 100%; // prevents images from being cut when they are larger than page width
	}

	// @section links
	a[href] {
		color: #00c;
		background: #fff;

		&:after {
			font-size: 80%;
			content: ' (' attr(href) ') ';
		}

	}

	// @section hidden-elements
	nav {
		display: none;
	}

}
