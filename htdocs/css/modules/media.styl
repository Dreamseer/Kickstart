// @section images
img {
	color: color-text;
	background: transparent;
	vertical-align: bottom;
	max-width: 100%;
	height: auto;
	border: 0 none; // removes border when inside `a` element in IE7/8/9
	-ms-interpolation-mode: bicubic; // improves image quality when scaled in IE7
}

// @section figures
figure {
	display: block
	margin: 0;
}

figcaption {
	display: block;
}

// @section canvas
canvas {
	display: inline-block;
}

// @section audio-video
audio ,
video {
	@extend canvas;
}

audio:not([controls]) {
	display: none;
	height: 0;
}
