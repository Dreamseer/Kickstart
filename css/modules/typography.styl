// Typography module

// @section main
html
	font base-size/1.375 text-copy
	text-rendering optimizeLegibility
	quotes '»' '«' '›' '‹'

// Headlines
h1
	margin 0 0 .5em
	color lighten(color-text, 25%)
	background transparent
	font normal 2*base-size*1em/1 text-bold
	text-transform uppercase

h2
	margin 1em 0 .666666667em
	color saturate(color-text, 50%)
	background transparent
	font normal 1.5*base-size*1em/1 text-bold
	text-transform uppercase

h1 , h2 , h3 , h4 , h5 , h6

	abbr[title]
		border-bottom 0 none

// @section paragraphs
p , address
	margin 0 0 base-size*1em

// @section quotations
blockquote
	margin 0 0 1em
	padding 0 1em
	font-style italic

q
	quotes '»' '«' '›' '‹'

// @section links
a

	&:link , &:visited , &:hover , &:focus , &:active
		text-rendering auto
		text-decoration none

	&:link , &:visited
		color color-link
		background transparent

	&:hover , &:focus , &:active
		color color-link-hover
		background transparent

// @section abbreviations
abbr[title]
	border-color lighten(color-text, 75%)
	cursor help

// @section code
code , pre
	color darken(color-text, 100%)
	background darken(color-background, 50%)
	padding 2px 3px
	border-radius 3px
	text-shadow 0 1px 1px rgba(255, 255, 255, .75)

pre
	font-size 1em
	margin 0 0 2em
	padding 1em
	overflow auto
	tab-width 4
