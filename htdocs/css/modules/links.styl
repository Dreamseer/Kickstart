// @section links
a {

	&:link ,
	&:visited ,
	&:hover ,
	&:focus ,
	&:active {
		text-rendering: auto;
	}

	&:link ,
	&:visited {
		color: color-link;
		background: transparent;
		text-decoration: underline;
	}

	&:hover ,
	&:focus ,
	&:active {
		color: color-link-hover;
		background: transparent;
		text-decoration: none;
	}

}

// @section printed-links
@media print {

	a[href] {
		color: #00c;
		background: #fff;

		&:after {
			font-size: 80%;
			content: ' (' attr(href) ') ';
		}

	}

}
