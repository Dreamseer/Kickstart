// @section inline-code
code {
	color: darken(color-text, 100%);
	background: darken(color-background, 50%);
	padding: 2px 3px;
	border-radius: 3px;
	text-shadow: 0 1px 1px rgba(#fff, .75);
}

// @section block-code
pre {
	@extend code;
	font-size: 1em;
	margin: 0 0 2em;
	padding: 1em;
	overflow: auto;
	tab-width: 4;
	white-space: pre;
	white-space: pre-wrap;
	word-wrap: break-word;
}
