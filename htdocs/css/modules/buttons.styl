// @section buttons
button ,
.button {

	// basic look and default state
	& ,
	&:link ,
	&:visited ,
	&:hover ,
	&:focus ,
	&:active {
		position: relative;
		display: inline-block;
		margin: 0;
		padding: 0 1em;
		border: 0 none;
		text-decoration: none;
		text-align: center;
		border-radius: 5px;
		cursor: pointer;
		-webkit-appearance: button; // corrects inability to style clickable `input` types in iOS
		-moz-appearance: button;
		appearance: button;
	}

	// focused state
	//&:hover , &:focus {
	//}

	// active state
	//&:active {
	//}

	// removes inner padding and border in FF3+
	&::-moz-focus-inner {
		padding: 0;
		border: 0 none;
	}

	// disabled button
	&[disabled] {
		cursor: default;
	}

}
