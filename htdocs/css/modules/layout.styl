// @section root-elements
html {
	overflow-y: scroll; // provides scrollbars to avoid jumping centered layouts
	color: color-text;
	background: color-background;
}

body {
	position: relative;
	margin: 0 auto;
	width: 60em;
	max-width: 90%; // respond on smaller screens
	color: color-text;
	background: transparent;
}

// @section main-content
main {
	display: block; // correct `block` display not defined in IE 8/9/10/11.
	color: color-text;
	background: color-background;
	clearfix();
}

// @section footer
footer {
	display: block; // correct `block` display not defined in IE 8/9
	clear: both; // footers should clear all content floats
}

// @section printed-page-layout
@media print {

	@page {
		size: landscape;
		margin: 2cm;
		orphans: 4;
		widows: 2;
	}

	html ,
	body {
		width: 100%;
		max-width: none;
		margin: 0;
		padding: 0;
		color: #000;
		background: #fff;
	}

}
