// @section headlines
h1 {
	display: none;
	margin: 0 0 .5em;
	color: color-headline;
	background: transparent;
	font: bold 2em/1.3 text-headline;
}

h2 {
	margin: 1em 0 .666666667em;
	color: color-headline;
	background: transparent;
	font: bold 1.375em/1.3 text-headline;
}

h3 {
	margin: 1.5em 0 1em;
	color: color-text;
	background: transparent;
	font: bold 1em/1 text-copy;
}

h4 {
	@extend h3;
	color: lighten(color-text, 33%);
	background: transparent;
}

h5 {
	margin: 1.33333333333em 0;
	color: lighten(color-text, 33%);
	background: transparent;
	font: bold .75em/1 text-copy;
	text-transform: uppercase;
}

h6 {
	@extend h5;
}

// @section abbreviations-in-headlines
h1 ,
h2 ,
h3 ,
h4 ,
h5 ,
h6 {

	abbr[title] {
		border-bottom: 0 none;
	}

}

// @section page-breaks
@media print {

	h1 ,
	h2 ,
	h3 ,
	h4 ,
	h5 ,
	h6 {
		page-break-inside: avoid;
	}

}
