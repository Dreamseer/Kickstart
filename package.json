{
  "name": "kickstart",
  "private": true,
  "version": "5.0.0-alpha3",
  "description": "This is my Kickstart toolset, serving as a boilerplate for new projects written in PHP, CSS and JavaScript.",
  "keywords": [
    "kickstart",
    "boilerplate",
    "php",
    "html",
    "css",
    "javascript"
  ],
  "license": "MIT",
  "repository": "github:mrcgrtz/kickstart",
  "author": {
    "name": "Marc GÃ¶rtz",
    "email": "git@marcgoertz.de",
    "url": "https://marcgoertz.de/"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "gulp",
    "lint": "npm run-script lint:js && npm run-script lint:ts && npm run-script lint:css",
    "lint:js": "xo",
    "lint:ts": "tsc --noEmit --strict",
    "lint:css": "stylelint ./public/css/src/**/*.css",
    "prepare": "husky install",
    "watch": "gulp watch"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "cssnano": "^5.1.7",
    "globby": "^13.1.1",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^9.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.1.0",
    "hash.js": "^1.1.7",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "postcss": "^8.4.12",
    "postcss-assets": "^6.0.0",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.4.3",
    "stylelint": "^14.7.1",
    "stylelint-config-standard": "^25.0.0",
    "through2": "^4.0.2",
    "tinyify": "^3.0.0",
    "tsify": "^5.0.4",
    "typescript": "^4.6.4",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "xo": "^0.48.0"
  },
  "lint-staged": {
    "*.?({c,m}){j,t}s?(x)": "xo --fix",
    "*.css": "stylelint --fix"
  },
  "xo": {
    "envs": [
      "browser"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-vendor-prefix": true,
      "color-named": "never",
      "font-family-name-quotes": "always-where-recommended",
      "function-no-unknown": [
        true,
        {
          "ignoreFunctions": [
            "/^resolve$|^inline$/",
            "color-mod",
            "/^red$|^green$|^blue$|^a(?:lpha)?$|^rgb$|^h(?:ue)?$|^s(?:aturation)?$|^l(?:ightness)?$|^w(?:hiteness)?$|^b(?:lackness)?$|^tint$|^shade$|^blenda?$|^contrast$/"
          ]
        }
      ],
      "function-url-quotes": [
        "always",
        {
          "except": [
            "empty"
          ]
        }
      ],
      "indentation": "tab",
      "media-feature-name-no-vendor-prefix": true,
      "no-descending-specificity": null,
      "selector-attribute-quotes": "always",
      "selector-no-vendor-prefix": true,
      "string-quotes": "double"
    }
  },
  "browserslist": [
    "last 2 versions",
    "> 0.5% in DE",
    "not dead"
  ]
}
