// @section form-defaults
form {

	// fieldset legends
	legend {
		border: 0 none; // corrects color not being inherited in IE8/9
		color: color-text;
		background: transparent;
		white-space: normal; // corrects text not wrapping in FF3
	}

	// labels (above fields)
	label {
		display: block;
		font-weight: bold;
		cursor: pointer;

		// to highlight form errors or required form fields
		&[role='alert'] {
			color: color-error;
			background: transparent;
		}

	}

	// input field
	input {
		margin: 0;
		font: 1em text-copy;
		vertical-align: baseline;

		// checkboxes and radio boxes
		&[type='checkbox'] ,
		&[type='radio'] {
			padding: 0; // removes excess padding in IE8/9
			box-sizing: border-box; // addresses box-sizing set to content-box in IE8/9

			& + label {
				display: inline-block; // for labels next to checkboxes or radio boxes
			}

		}

		// Fix the cursor style for Chrome's increment/decrement buttons. For certain
		// `font-size` values of the `input`, it causes the cursor style of the
		// decrement button to change from `default` to `text`.
		&[type='number']::-webkit-inner-spin-button ,
		&[type='number']::-webkit-outer-spin-button {
			height: auto;
		}

		// disabled inputs
		&[readonly] ,
		&[disabled] {
			color: lighten(color-text, 50%);
			background: transparent;
			cursor: default;
		}

	}

	// multi-line input field
	textarea {
		margin: 0;
		overflow: auto; // removes default vertical scrollbar in IE8/9
		font: 1em text-copy;
		vertical-align: top; // improves readability and alignment in all browsers

		// disabled inputs
		&[readonly] ,
		&[disabled] {
			color: lighten(color-text, 50%);
			background: transparent;
			cursor: default;
		}

	}

	// dropdowns
	select {
		margin: 0;
		font: 1em text-copy;
		vertical-align: baseline;

		// disabled inputs
		&[disabled] {
			cursor: default;
		}

	}

}
